<% include ../header %>

    <div class="container">

        <table class="table table-hover table-striped table-condensed table-bordered">
            <thead>
                <tr>
                    <th class="col-md-3">Produto</th>
                    <th class="col-md-3">Quantidade</th>
                    <th class="col-md-3">Prazo</th>
                    <th class="col-md-3">Quantidade em Estoque</th>
                </tr>
            </thead>
            <tbody>
                <% for(var i=0; i<produtos.length; i++) {%>
                    <tr>
                        <td>
                            <span class="table-content"><%= produtos[i].nomeProduto %></span>
                        </td>
                        <td>
                            <span class="table-content"><%= produtos[i].quantidadeProduto %></span>
                        </td>
                        <td>
                            <span class="table-content"><%= produtos[i].durabilidadeTotal %></span>
                        </td>
                        <td>
                            <span class="table-content"><%= produtos[i].quantidadeProduto %></span>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>

    </div>

    <% include ../footer %>