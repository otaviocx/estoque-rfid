<% include ../header %>

    <div class="container">

        <table class="table table-hover table-striped table-condensed table-bordered">
            <thead>
                <tr>
                    <th class="col-md-4">Produto</th>
                    <th class="col-md-4">Unidade</th>
                    <th class="col-md-4">Total</th>
                </tr>
            </thead>
            <tbody>
                <% for(var i=0; i<durabilidades.length; i++) {%>
                    <tr>
                        <td>
                            <span class="table-content"><%= durabilidades[i].nomeProduto %></span>
                        </td>
                        <td>
                            <span class="table-content"><%= durabilidades[i].unidade %></span>
                        </td>
                        <td>
                            <span class="table-content"><%= durabilidades[i].total %></span>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>

    </div>

<% include ../footer %>